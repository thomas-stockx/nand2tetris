/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Not(in=a, out=nota);
    Not(in=b, out=notb);
    And(a=nota, b=b, out=notaAndb);
    And(a=a, b=notb, out=aAndNotb);
    Or(a=notaAndb, b=aAndNotb, out=out);
}